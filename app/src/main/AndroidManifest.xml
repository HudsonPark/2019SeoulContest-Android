<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seoulcontest.firstcitizen">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/first_citizen_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.infomenu.history.HelpDetailActivity"></activity>
        <activity android:name=".ui.infomenu.history.HelpHistoryActivity" />
        <activity android:name=".ui.infomenu.history.RequestHistoryActivity" />
        <activity android:name=".ui.infomenu.logIn.SignUpActivity" />
        <activity android:name=".ui.infomenu.logIn.LogInActivity" />
        <activity android:name=".ui.help.HelpUploadActivity" />
        <activity
            android:name=".ui.infomenu.history.RequestDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.infomenu.MyInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.infomenu.ServiceTermsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.infomenu.NoticeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.upload.UploadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.detail.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>