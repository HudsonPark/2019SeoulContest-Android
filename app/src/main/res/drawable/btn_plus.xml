<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/plusButtonBackground" />
            <corners android:radius="@dimen/button_plus_radius" />

            <size
                android:width="40sp"
                android:height="40sp" />
        </shape>
    </item>
    <item
        android:left="5sp"
        android:right="5sp">
        <shape android:shape="line">
            <stroke
                android:width="2sp"
                android:color="@color/plusButtonColor" />
        </shape>
    </item>

    <item
        android:left="5sp"
        android:right="5sp">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="2sp"
                    android:color="@color/plusButtonColor" />
            </shape>
        </rotate>
    </item>
</layer-list>