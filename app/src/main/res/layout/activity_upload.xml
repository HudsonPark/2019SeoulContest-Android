<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="upload"
            type="com.seoulcontest.firstcitizen.viewmodel.UploadViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/upload_layout_margin_top"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:context=".ui.upload.UploadActivity">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_side_margin"
                    android:layout_marginRight="@dimen/activity_side_margin"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:textSize="@dimen/activity_upload_category_size"
                    android:textStyle="bold"
                    tools:text="긴급 똥 휴지 요청" />

                <Button
                    android:id="@+id/btn_request"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_side_margin"
                    android:layout_marginRight="@dimen/activity_side_margin"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:text="요청"
                    android:textColor="@color/requestColor"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_side_margin"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/activity_side_margin"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_info_act"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="경찰 정보 제공"
                    android:textColor="@color/boldTextColor"
                    android:textSize="@dimen/activity_upload_title_size"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switch_public"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:checked="true"
                    android:switchMinWidth="@dimen/switch_width"
                    android:thumb="@drawable/switch_public_thumb"
                    android:track="@drawable/switch_public_track" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginLeft="@dimen/activity_side_margin"
                android:layout_marginRight="@dimen/activity_side_margin"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_occured_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_side_margin"
                android:layout_marginTop="24sp"
                android:layout_marginRight="@dimen/activity_side_margin"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치 입력"
                    android:textSize="@dimen/activity_upload_title_size"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/activity_side_margin"
                    android:layout_marginTop="@dimen/upload_layout_margin_top"
                    android:layout_marginRight="@dimen/activity_side_margin"
                    android:layout_weight="2"
                    android:elevation="10dp"
                    android:foreground="@drawable/card_view_box"
                    app:cardCornerRadius="@dimen/card_view_border_radius">

                    <LinearLayout
                        android:id="@+id/btn_find_by_area"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="8"
                            android:gravity="center"
                            android:text="지도로 찾기"
                            android:textColor="@color/boldTextColor" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:paddingTop="6sp"
                            android:paddingBottom="6sp"
                            android:src="@mipmap/ic_launcher" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/activity_side_margin"
                    android:layout_marginTop="@dimen/upload_layout_margin_top"
                    android:layout_marginRight="@dimen/activity_side_margin"
                    android:layout_weight="2"
                    android:foreground="@drawable/card_view_box"
                    app:cardCornerRadius="@dimen/card_view_border_radius">

                    <LinearLayout
                        android:id="@+id/btn_find_by_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="8"
                            android:gravity="center"
                            android:text="주소로 찾기"
                            android:textColor="@color/boldTextColor" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:paddingTop="6sp"
                            android:paddingBottom="6sp"
                            android:src="@mipmap/ic_launcher" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_margin_top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/boldTextColor"
                    android:textSize="@dimen/activity_content_size"
                    android:textStyle="bold"
                    tools:text="@string/app_name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_side_margin"
                android:layout_marginTop="20sp"
                android:layout_marginRight="@dimen/activity_side_margin"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="타이틀"
                    android:textSize="@dimen/activity_upload_title_size"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/activity_side_margin"
                    android:layout_marginTop="@dimen/upload_layout_margin_top"
                    android:layout_marginRight="@dimen/activity_side_margin"
                    android:layout_weight="1"
                    android:foreground="@drawable/card_view_box"
                    app:cardCornerRadius="@dimen/card_view_border_radius"
                    app:contentPadding="@dimen/card_view_padding">

                    <EditText
                        android:id="@+id/edt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:lines="1"
                        android:textSize="@dimen/activity_content_size" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_side_margin"
                android:layout_marginTop="10sp"
                android:layout_marginRight="@dimen/activity_side_margin"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="메세지"
                    android:textSize="@dimen/activity_upload_title_size"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/activity_side_margin"
                    android:layout_marginTop="@dimen/upload_layout_margin_top"
                    android:layout_marginRight="@dimen/activity_side_margin"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="6"
                    android:foreground="@drawable/card_view_box"
                    app:cardCornerRadius="@dimen/card_view_border_radius"
                    app:contentPadding="@dimen/card_view_padding">

                    <EditText
                        android:id="@+id/edt_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_side_margin"
                        android:layout_marginTop="@dimen/upload_layout_margin_top"
                        android:layout_marginRight="@dimen/activity_side_margin"
                        android:layout_marginBottom="10sp"
                        android:background="@null"
                        android:inputType="textMultiLine"
                        android:lines="8" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_side_margin"
                    android:layout_marginRight="@dimen/activity_side_margin"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="파일 첨부"
                        android:textSize="@dimen/activity_upload_title_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/btn_select_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_plus"
                        android:orientation="vertical" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_request_file_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_margin_top" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>