<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_margin_top"
            android:layout_marginBottom="@dimen/dialog_margin_bottom"
            android:gravity="center"
            android:text="선택해주세요"
            android:textColor="@color/boldTextColor"
            android:textSize="@dimen/dialog_title_size"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@drawable/dashline" />


        <Button
            android:id="@+id/btn_add_images"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이미지 추가"
            android:textSize="@dimen/dialog_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@drawable/dashline" />

        <Button
            android:id="@+id/btn_add_videos"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동영상 추가"
            android:textSize="@dimen/dialog_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@drawable/dashline" />

        <Button
            android:id="@+id/btn_cancel_addition"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="@dimen/dialog_text_size" />

    </LinearLayout>
</layout>